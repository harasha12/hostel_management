    /* ------------------------------------- */
    /* NEW CSS FOR SCROLLING NOTIFICATION BAR */
    /* ------------------------------------- */
    .notification-bar-container {
        width: 100%;
        max-width: 1500px;
        margin: 0 auto 20px auto; /* Center it and add bottom margin */
        overflow: hidden; /* Hide the content that is off-screen */
        background: rgba(255, 204, 0, 0.9); /* Bright yellow background */
        color: #333; /* Dark text for contrast */
        padding: 8px 0;
        border-radius: 5px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
    }

    .notification-bar-text {
        display: inline-block;
        white-space: nowrap; /* Prevent text wrapping */
        padding-left: 100%; /* Start the text off the right side of the container */
        animation: scroll-left 25s linear infinite; /* Animation definition */
        font-weight: bold;
        font-size: 1.1rem;
    }

    /* Keyframes for the scrolling animation */
    @keyframes scroll-left {
        0% {
            transform: translateX(0%);
        }
        100% {
            transform: translateX(-100%); /* Move the text completely off the left side */
        }
    }
    /* ------------------------------------- */
    /* END NEW CSS */
    /* ------------------------------------- */
    body {
