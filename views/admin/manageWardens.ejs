  position: absolute;
  right: 10px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 1rem;
  color: #555;
  cursor: pointer;
}

/* Add button */
.form-actions {
  display: flex;
  justify-content: center;
}

.btn-primary {
  background: #ffd84d;
  color: #1d2b4f;
  border: none;
  border-radius: 8px;
  padding: 12px 28px;
  font-weight: 700;
  font-size: 1rem;
  cursor: pointer;
  margin-top: 10px;
  box-shadow: 0 5px 12px rgba(255, 215, 77, 0.3);
  transition: all 0.25s ease;
}

.btn-primary:hover {
  background: #ffe87a;
  transform: translateY(-2px);
}

/* Responsive mobile fix */
@media (max-width: 768px) {
  .input-group {
    flex-direction: column;
    align-items: center;
  }

  .input-group input,
  .password-box {
    width: 90%;
  }
}

  </style>
</head>

<body>
  <%- include('../partials/header') %>

  <!-- âœ… Message Container -->
  <div id="message-container">
    <% if (messages && messages.success && messages.success.length) { %>
      <div class="message-box success"><i class="fas fa-check-circle"></i> <%= messages.success %></div>
    <% } %>
    <% if (messages && messages.error && messages.error.length) { %>
      <div class="message-box error"><i class="fas fa-times-circle"></i> <%= messages.error %></div>
    <% } %>
  </div>

  <div class="content-wrapper">
    <div class="card">
      <h2 class="page-title"><i class="fas fa-user-shield"></i> Manage Wardens</h2>
      <p class="page-subtitle">Add and manage wardens in your hostel system.</p>

     <form action="/admin/addWarden" method="POST" class="warden-form">
  <div class="input-group">
    <input type="text" name="hostel_id" placeholder="Hostel ID" required>
    <input type="text" name="name" placeholder="Warden Name" required>
    <input type="email" name="email" placeholder="Warden Email" required>
    <div class="password-box">
      <input type="password" name="password" id="wardenPassword" placeholder="Password" required>
      <i class="far fa-eye show-hide-icon" id="togglePassword"></i>
    </div>
  </div>
  <div class="form-actions">
    <button type="submit" class="btn-primary">
      <i class="fas fa-user-plus"></i> Add Warden
    </button>
  </div>
</form>


      <h3 class="section-title">Existing Wardens</h3>
      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Hostel ID</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% wardens.forEach(w => { %>
              <tr>
                <td><%= w.warden_id || w.id %></td>
                <td><%= w.name %></td>
                <td><%= w.email %></td>
                <td><%= w.hostel_id %></td>
                <td>
                 <form action="/admin/deleteWarden/<%= w.warden_id %>" method="POST" style="display:inline;">
  <button type="submit" class="btn-danger" onclick="return confirm('Are you sure you want to delete this warden?');">
    <i class="fas fa-trash-alt"></i> Delete
  </button>
</form>

                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div style="text-align:center;">
        <a href="/admin/dashboard" class="back-dashboard"><i class="fas fa-arrow-left"></i> Back to Dashboard</a>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <script>
    // âœ… Password show/hide toggle
    document.getElementById('togglePassword').addEventListener('click', function() {
      const pwd = document.getElementById('wardenPassword');
      if (pwd.type === 'password') {
        pwd.type = 'text';
        this.classList.replace('fa-eye', 'fa-eye-slash');
      } else {
        pwd.type = 'password';
        this.classList.replace('fa-eye-slash', 'fa-eye');
      }
    });

    // âœ… Auto-hide messages
    setTimeout(() => {
      const msgBox = document.querySelector('.message-box');
      if (msgBox) msgBox.style.display = 'none';
    }, 4000);
  </script>
</body>
</html>
