  width: 200px;
  padding: 12px 15px;
  border-radius: 8px;
  border: 1.5px solid #cdd9ee;
  background: #f0f5ff;
  font-weight: 600;
  color: #2a334d;
  transition: all 0.25s ease;
}

/* When focused */
.input-group input:focus {
  background: #e9f2ff;
  border-color: #ffd84d;
  outline: none;
  box-shadow: 0 0 0 5px rgba(255, 215, 77, 0.25);
}

