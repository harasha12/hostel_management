<!DOCTYPE html>
<html>
<head>
    <title>Manage Wardens</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container">
        <h2>Manage Wardens</h2>

        <form action="/admin/addWarden" method="POST" class="form-box">
            <input type="text" name="name" placeholder="Warden Name" required>
            <input type="email" name="email" placeholder="Warden Email" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit">Add Warden</button>
        </form>

        <h3>Existing Wardens</h3>
        <table border="1">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
            <% wardens.forEach(w => { %>
                <tr>
                    <td><%= w.id %></td>
                    <td><%= w.name %></td>
                    <td><%= w.email %></td>
                    <td><a href="/admin/deleteWarden/<%= w.id %>" class="btn-reject">Delete</a></td>
                </tr>
            <% }) %>
        </table>

        <a href="/admin/dashboard" class="back-link">Back to Dashboard</a>
    </div>
    <a href="/student/dashboard" class="back-btn">â¬… Back to Dashboard</a>


    <%- include('../partials/footer') %>
</body>
</html>
