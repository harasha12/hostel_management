<!DOCTYPE html>
<html>
<head>
    <title>My Attendance</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h2>Attendance Records</h2>
    <table border="1">
        <tr>
            <th>Date</th>
            <th>Period</th>
            <th>Status</th>
        </tr>
        <% attendance.forEach(a => { %>
            <tr>
                <td><%= a.date.toISOString().split('T')[0] %></td>
                <td><%= a.period %></td>
                <td><%= a.status %></td>
            </tr>
        <% }) %>
    </table>
    <a href="/student/dashboard">Back to Dashboard</a>
</body>
</html>
