
<header>
    <div class="navbar">
        <div class="logo">
            <a href="/">üè† Hostel Management</a>
        </div>
<style>
/* Header Container */
header {
  background: linear-gradient(135deg, #2e8b57, #1b5e20);
  color: white;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15);
  position: sticky;
  top: 0;
  z-index: 1000;
  border-bottom-left-radius: 12px;
  border-bottom-right-radius: 12px;
}

.navbar {
  max-width: 1200px;
  margin: 0 auto;
  padding: 14px 25px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.logo a {
  color: white;
  text-decoration: none;
  font-weight: 700;
  font-size: 1.4rem;
  transition: color 0.3s ease;
}

.logo a:hover {
  color: #d4f5d4;
}

/* ===== Button Styling (Main Part You Wanted) ===== */
nav a {
  color: #fff;
  text-decoration: none;
  font-weight: 600;
  padding: 8px 16px;
  border-radius: 25px;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(4px);
  border: 1px solid rgba(255, 255, 255, 0.15);
}

nav a:hover {
  background: linear-gradient(135deg, #66bb6a, #43a047);
  transform: translateY(-2px);
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
}

/* Special buttons */
nav a[href="/logout"] {
  background: #e53935;
  border: none;
  color: white;
  font-weight: 600;
}

nav a[href="/logout"]:hover {
  background: #c62828;
  box-shadow: 0 3px 10px rgba(229, 57, 53, 0.3);
}

nav a[href="/choose_login"] {
  background: #3498db;
  border: none;
}

nav a[href="/choose_login"]:hover {
  background: #1f78c1;
  box-shadow: 0 3px 10px rgba(52, 152, 219, 0.3);
}

/* Spacing and responsiveness */
nav {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
}

@media (max-width: 768px) {
  .navbar {
    flex-direction: column;
    text-align: center;
    gap: 10px;
  }

  nav a {
    font-size: 0.95rem;
    padding: 7px 14px;
  }
}
</style>

        <nav>
            <% if (session && session.role) { %>
                <% if (session.role === 'student') { %>
                    <a href="/student/dashboard">Dashboard</a>
                    <a href="/student/profile">Profile</a>
                    <a href="/student/applyoutpass">Apply Outpass</a>
                    <a href="/student/viewfees">View Fees</a>
                    <a href="/student/uploadReceipt">Upload Receipt</a>
                <% } else if (session.role === 'warden') { %>
                    <a href="/warden/dashboard">Dashboard</a>
                    <a href="/warden/markAttendance">Mark Attendance</a>
                    <a href="/warden/approveOutpass">Approve Outpasses</a>
                <% } else if (session.role === 'admin') { %>
                    <a href="/admin/dashboard">Dashboard</a>
                    <a href="/admin/uploadSBI">Upload SBI PDF</a>
                    <a href="/admin/acceptedReceipts">Pending Receipts</a>
                    <a href="/admin/manageWardens">Manage Wardens</a>
                <% } else if (session.role === 'security') { %>
                    <a href="/security/dashboard">Dashboard</a>
                    <a href="/security/viewOutpasses">View Outpasses</a>
                <% } %>
                <a href="/logout">Logout</a>
            <% } else { %>
                <a href="/choose_login">Login</a>
            <% } %>
        </nav>
    </div>
</header>

