
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Security Login | Hostel Management Portal</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
  <style>
    body {
      background: url("/images/hostel-bg.jpg") no-repeat center center fixed;
      background-size: cover;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #fff;
    }

    .overlay {
      background: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(5px);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      padding: 20px;
    }

    .college-header {
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 30px 20px;
      background: rgba(255, 255, 255, 0.1);
      border-bottom: 2px solid rgba(255, 255, 255, 0.3);
      margin-bottom: 40px;
      width: 100%;
      max-width: 1500px;
    }

    .college-header img {
      max-height: 120px;
      margin-right: 20px;
      filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.5));
    }

    .college-header .header-text h2 {
      margin: 0;
      font-size: 2.5rem;
      font-weight: bold;
      color: #fff;
      text-transform: uppercase;
      text-shadow: 2px 2px 4px #000;
    }

    .college-header .header-text p {
      margin: 5px 0 0;
      font-size: 1rem;
      color: #f0f0f0;
      line-height: 1.4;
      max-width: 800px;
      text-align: center;
      margin: 1px auto 0 auto;
    }

    .college-header .header-text .autonomous {
      color: #ffcc00;
      font-weight: bold;
      text-shadow: 1px 1px 2px #000;
    }

    .login-container {
      background: rgba(255, 255, 255, 0.1);
      padding: 40px;
      border-radius: 10px;
      box-shadow: 0px 8px 25px rgba(0, 0, 0, 0.6);
      max-width: 400px;
      width: 100%;
      text-align: center;
    }

    .login-container h2 {
      margin-bottom: 30px;
      color: #fff;
      text-shadow: 2px 2px 5px #000;
    }

    .login-container label {
      font-weight: bold;
      display: block;
      text-align: left;
      margin-bottom: 5px;
    }

    .login-container input {
      width: 100%;
      padding: 10px;
      margin-bottom: 20px;
      border: none;
      border-radius: 5px;
    }

    .login-container button {
      width: 100%;
      padding: 12px;
      background: #007bff;
      border: none;
      border-radius: 5px;
      font-size: 1rem;
      color: #fff;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .login-container button:hover {
      background: #0056b3;
    }

    .login-container a {
      color: #ffc107;
      text-decoration: none;
    }

    .login-container a:hover {
      text-decoration: underline;
    }

    @media (max-width: 500px) {
      .login-container {
        padding: 30px 20px;
      }

      .college-header {
        flex-direction: column;
        padding: 20px 10px;
      }

      .college-header img {
        margin-bottom: 10px;
      }

      .college-header .header-text h2 {
        font-size: 1.5rem;
      }

      .college-header .header-text p {
        font-size: 0.9rem;
      }
    }
  </style>
</head>
<body>
  <div class="overlay">
    <!-- College Header -->
    <div class="college-header">
      <img src="/images/college_logo.png" alt="College Logo" />
      <div class="header-text">
        <h2>
          SIR C R REDDY COLLEGE OF ENGINEERING -BOYS HOSTEL
          (<span class="autonomous">AUTONOMOUS</span>)
        </h2>
        <p>
          Approved by AICTE & Permanently Affiliated to JNTUk, Kakinada, NAAC-A<br>
          Accredited by NBA (CSE, IT, EEE, Mech, ECE, Civil)<br>
          Vatluru, Eluru, Eluru District, AP - 534007
        </p>
      </div>
    </div>

    <!-- Security Login Form -->
    <div class="login-container">
      <h2>Security Login</h2>
      <form action="/login/security" method="POST">
        <label>Email:</label>
        <input type="email" name="email" placeholder="Enter your Email" required>

        <label>Password:</label>
        <input type="password" name="password" placeholder="Enter your Password" required>

        <button type="submit">Login</button>
      </form>

      <p class="mt-3"><a href="/forgot-password">Forgot Password?</a></p>
      <p>Don't have an account? <a href="/register/security">Register here</a></p>
      <p><a href="/">Back to Home</a></p>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Get references to the two containers and the toggle links
    const loginForm = document.getElementById('login-form');
    const forgotForm = document.getElementById('forgot-form');
    const showForgotLink = document.getElementById('show-forgot');
    const showLoginLink = document.getElementById('show-login');

    // --- Logic to handle form switching ---
    
    // 1. When 'Forgot Password?' is clicked
    if (showForgotLink) {
        showForgotLink.addEventListener('click', function(e) {
            e.preventDefault(); // Stop the link from trying to navigate
            if (loginForm && forgotForm) {
                loginForm.style.display = 'none';
                forgotForm.style.display = 'block';
            }
        });
    }
    

    // 2. When 'Back to Login' is clicked
    if (showLoginLink) {
        showLoginLink.addEventListener('click', function(e) {
            e.preventDefault(); // Stop the link from trying to navigate
            if (loginForm && forgotForm) {
                forgotForm.style.display = 'none';
                loginForm.style.display = 'block';
            }
        });
    }
  </script>
</body>

</html>
