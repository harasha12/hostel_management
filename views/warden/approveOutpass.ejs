  .outpass-container { padding: 16px 4vw; }
  .outpass-table th, .outpass-table td { padding: 10px 5px; font-size: 16px; }
  .outpass-heading { font-size: 1.15em; max-width: 98vw; border-bottom-width:2px; }
}
</style>