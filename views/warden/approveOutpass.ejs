  font-weight: 700;
  color: #1b243b;
}

.outpass-table td:nth-child(4):contains('Emergency') {
  color: #d14343;
}

.status-badge {
  font-size: 1em;
  font-weight: 700;
  padding: 6px 14px;
  border-radius: 7px;
  text-transform: uppercase;
}
.status-badge.pending {
  background: #fff7d1;
  color: #b8950f;
  border: 1px solid #ffc107;
}
.status-badge.approved {
