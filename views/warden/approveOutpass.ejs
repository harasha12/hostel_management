  color: #21a021;
  border: 1px solid #43d249;
}
.status-badge.rejected {
  background: #ffe5e8;
  color: #d14343;
  border: 1px solid #ed4c4c;
}

.btn-action {
  font-family: 'Montserrat', 'Roboto', sans-serif;
  font-weight: 700;
  border: none;
  border-radius: 7px;
