<!DOCTYPE html>
<html>
<head>
    <title>Approve Outpasses</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container">
        <h2>Approve/Reject Outpass Requests</h2>

        <table border="1">
            <tr>
                <th>Student ID</th>
                <th>Name</th>
                <th>Reason</th>
                <th>Out Date</th>
                <th>Return Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            <% outpasses.forEach(op => { %>
                <tr>
                    <td><%= op.student_id %></td>
                    <td><%= op.name %></td>
                    <td><%= op.reason %></td>
                    <td><%= op.out_date.toISOString().split('T')[0] %></td>
                    <td><%= op.return_date.toISOString().split('T')[0] %></td>
                    <td><%= op.status %></td>
                    <td>
                        <% if (op.status === 'Pending') { %>
                            <form action="/warden/approveOutpass/<%= op.outpass_id %>/approve" method="POST" style="display:inline;">
                                <button type="submit">Approve</button>
                            </form>
                            <form action="/warden/approveOutpass/<%= op.outpass_id %>/reject" method="POST" style="display:inline;">
                                <button type="submit">Reject</button>
                            </form>
                        <% } else { %>
                            <span><%= op.status %></span>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </table>

        <a href="/warden/dashboard" class="back-link">Back to Dashboard</a>
    </div>
    <a href="/student/dashboard" class="back-btn">â¬… Back to Dashboard</a>


    <%- include('../partials/footer') %>
</body>
</html>
