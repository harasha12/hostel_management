<div class="outpass-container">
  <h2 class="outpass-heading">Approve/Reject Outpass Requests</h2>
  <div class="outpass-table-wrap">
    <table class="outpass-table">
      <thead>
        <tr>
          <th>Student ID</th>
          <th>Name</th>
          <th>Reason</th>
          <th>Type</th>
          <th>Out Date</th>
          <th>Return Date</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% outpasses.forEach(op => { %>
        <tr class="<%= op.status === 'Pending' ? 'pending-row' : 'resolved-row' %>">
          <td><%= op.student_id %></td>
          <td><%= op.name %></td>
          <td><%= op.outpass_type %></td>
          <td><%= op.reason %></td>
          <td><%= op.out_date.toISOString().split('T')[0] %></td>
          <td><%= op.return_date.toISOString().split('T')[0] %></td>
          <td>
            <span class="status-badge <%= op.status.toLowerCase() %>"><%= op.status %></span>
          </td>
          <td>
            <% if (op.status === 'Pending') { %>
              <form action="/warden/approveOutpass/<%= op.outpass_id %>/approve" method="POST" style="display:inline;">
                <button type="submit" class="btn-action btn-approve">Approve</button>
              </form>
              <form action="/warden/approveOutpass/<%= op.outpass_id %>/reject" method="POST" style="display:inline;">
                <button type="submit" class="btn-action btn-reject">Reject</button>
              </form>
            <% } else { %>
              <span>-</span>
            <% } %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <a href="/warden/dashboard" class="back-link">Back to Dashboard</a>
</div>

<style>

.outpass-heading {
  letter-spacing: 1px;
  font-size: 2.1em;
  font-family: 'Montserrat', 'Georgia', serif;
  font-weight: 900;
  color: #1b243b;
  text-align: center;
  margin-bottom: 24px;
  border-bottom: 3px solid #ffc107;
  padding-bottom: 8px;
  max-width: 520px;
  margin-left: auto;
  margin-right: auto;
  background: linear-gradient(90deg, #a6a8ad 75%, #fffbe8 100%);
  border-radius: 8px 8px 0 0;
}

.outpass-table-wrap {
  background: #fff;
  border-radius: 13px;
  box-shadow: 0 2px 32px #18223522;
  overflow-x: auto;
  margin-bottom: 18px;
}

.outpass-table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
  font-size: 1.08rem;
  color: #222;
  min-width: 800px;
}
.outpass-table th, .outpass-table td {
  padding: 15px 18px;
  text-align: left;
}
.outpass-table th {
  background: linear-gradient(90deg, #182235 80%, #22304c 100%);
  color: #ffe082;
  font-weight: 700;
  font-size: 1.05em;
  letter-spacing: 0.6px;
  border: none;
}
.outpass-table tr {
  border-radius: 12px;
  transition: background 0.18s;
}
.outpass-table tr.pending-row {
  background: #fffdecc7;
}
.outpass-table tr.resolved-row {
  background: #f4f8fc;
}
.outpass-table tr:hover {
  background: #ffe08244;
}
.outpass-table td {
  border-bottom: 1px solid #eee;
}
