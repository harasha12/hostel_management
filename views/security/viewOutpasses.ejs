<!DOCTYPE html>
<html>
<head>
    <title>View Outpasses - Security</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .outpass-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background: #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border-radius: 10px;
            overflow: hidden;
        }
        .outpass-table th, .outpass-table td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }
        .outpass-table th {
            background: #4CAF50;
            color: white;
        }
        .outpass-table tr:hover {
            background: #f9f9f9;
        }
        .btn-approve, .btn-return {
            padding: 6px 14px;
            border-radius: 8px;
            text-decoration: none;
            color: #fff;
            font-weight: bold;
            transition: 0.3s;
            cursor: pointer;
        }
        .btn-approve {
            background: #2196F3;
        }
        .btn-approve:hover {
            background: #1976D2;
        }
        .btn-return {
            background: #FF9800;
        }
        .btn-return:hover {
            background: #F57C00;
        }
        .status {
            font-weight: bold;
            color: #555;
        }
        .back-link {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 18px;
            background: #6a11cb;
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            color: #fff;
            text-decoration: none;
            border-radius: 8px;
            font-weight: bold;
            transition: 0.3s;
        }
        .back-link:hover {
            opacity: 0.85;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container">
        <h2>Approved Outpasses</h2>

        <table class="outpass-table">
            <tr>
                <th>Student ID</th>
                <th>Reason</th>
                <th>Out Date</th>
                <th>Return Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            <% outpasses.forEach(op => { %>
                <tr>
                    <td><%= op.student_id %></td>
                    <td><%= op.reason %></td>
                    <td><%= op.out_date.toISOString().split('T')[0] %></td>
                    <td><%= op.return_date.toISOString().split('T')[0] %></td>
                    <td class="status"><%= op.status %></td>
                    <td>
                        <% if (op.status === 'Approved') { %>
                            <a href="/security/markExit/<%= op.outpass_id %>" 
                               class="btn-approve" 
                               onclick="return confirm('Are you sure you want to mark this student as Exited?');">
                               Mark Exit
                            </a>
                        <% } else if (op.status === 'Exited') { %>
                            <a href="/security/markReturn/<%= op.outpass_id %>" 
                               class="btn-return" 
                               onclick="return confirm('Are you sure you want to mark this student as Returned?');">
                               Mark Return
                            </a>
                        <% } else { %>
                            <span class="status"><%= op.status %></span>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </table>

        <a href="/security/dashboard" class="back-link">â¬… Back to Dashboard</a>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>
